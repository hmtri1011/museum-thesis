{
    "parser": "babel-eslint",
    "extends": [
        "eslint:recommended",
        "plugin:react/all",
        "plugin:react-perf/all"
    ],
    "plugins": [
        "react",
        "react-perf"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "generators": true,
            "arrowFunctions": true
        },
        "sourceType": "module"
    },
    "rules": {
        "react/prop-types": [
            0
        ],
        "react/jsx-filename-extension": "off",
        "react/jsx-indent": "off",
        "react/jsx-indent-props": "off",
        "react/display-name": "off",
        "react/jsx-no-literals": "off",
        "react/jsx-sort-props": "off",
        "react/sort-comp": "off",
        "react/sort-prop-types": "off",
        "react/jsx-max-props-per-line": "off",
        "react/jsx-no-bind": [
            "error",
            {
                "ignoreRefs": true
            }
        ],
        "react/forbid-component-props": "off",
        "react/jsx-handler-names": "off",
        "react/forbid-prop-types": "off",
        "react/no-set-state": "off",
        "react/no-danger": "off",
        "semi": "off",
        "no-console": "off"
    },
    "globals": {
        "ga": true,
        "googletag": true,
        "FB": true,
        "it": true,
        "__CLIENT__": true,
        "__DEV__": true
    }
}